<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jdrapid.rapidfast">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RapidFast">
        <activity android:name=".activities.cliente.CalificarConductorActivity"></activity>
        <activity android:name=".activities.conductor.CalificacionClienteActivity" />
        <activity android:name=".activities.conductor.MapConductorSolicitud" />
        <activity android:name=".activities.cliente.MapClienteReservaActivity" />

        <receiver
            android:name=".receivers.AceptReceiver"
            android:enabled="true" />
        <receiver
            android:name=".receivers.CancelReceiver"
            android:enabled="true" />

        <service android:name=".services.MyFirebaseNotificacionCliente">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".activities.cliente.SoliciarConductorActivity" />
        <activity
            android:name=".activities.cliente.DetallePedirConductor"
            android:parentActivityName=".activities.cliente.MapClienteActivity" />
        <activity android:name=".activities.conductor.MapConductorActivity" />
        <activity android:name=".activities.cliente.MapClienteActivity" />
        <activity android:name=".activities.conductor.RegistroConductorActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:parentActivityName=".activities.SeletAuthOptionActivity" />
        <activity
            android:name=".activities.cliente.RegistroClienteActivity"
            android:parentActivityName=".activities.SeletAuthOptionActivity" />
        <activity
            android:name=".activities.SeletAuthOptionActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity
            android:name=".activities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>