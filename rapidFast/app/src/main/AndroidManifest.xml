<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jdrapid.rapidfast">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RapidFast">
        <activity android:name=".activities.conductor.HistorialDetalleConductor"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.cliente.HistorialSolicitudDetalle"
            android:parentActivityName=".activities.cliente.HistorialSolicitudClienteActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.conductor.HistorialSolicitudConductorActivity"
            android:parentActivityName=".activities.conductor.MapConductorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.cliente.HistorialSolicitudClienteActivity"
            android:parentActivityName=".activities.cliente.MapClienteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.conductor.ActualizarPerfilConductor"
            android:parentActivityName=".activities.conductor.MapConductorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.cliente.ActualizarPerfilActivity"
            android:parentActivityName=".activities.cliente.MapClienteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.conductor.NotificacionSolicitudActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.cliente.CalificarConductorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.conductor.CalificacionClienteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.conductor.MapConductorSolicitud"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.cliente.MapClienteReservaActivity"
            android:screenOrientation="portrait" />

        <receiver
            android:name=".receivers.AceptReceiver"
            android:enabled="true" />
        <receiver
            android:name=".receivers.CancelReceiver"
            android:enabled="true" />

        <service android:name=".services.MyFirebaseNotificacionCliente">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".activities.cliente.SoliciarConductorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.cliente.DetallePedirConductor"
            android:parentActivityName=".activities.cliente.MapClienteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.conductor.MapConductorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.cliente.MapClienteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.conductor.RegistroConductorActivity"
            android:parentActivityName=".activities.SeletAuthOptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LoginActivity"
            android:parentActivityName=".activities.SeletAuthOptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.cliente.RegistroClienteActivity"
            android:parentActivityName=".activities.SeletAuthOptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SeletAuthOptionActivity"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>