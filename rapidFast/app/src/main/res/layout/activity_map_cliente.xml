<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    tools:context=".activities.cliente.MapClienteActivity">



    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="#F8F7F7"
        android:orientation="vertical"
        android:theme="@style/TextAppearance.Compat.Notification"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="65dp"

            app:cardCornerRadius="20dp">

            <fragment
                android:id="@+id/autocompletado"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                android:layout_width="match_parent"
                android:background="@color/black"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            app:cardCornerRadius="20dp">

            <fragment

                android:id="@+id/autocompletadodestino"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                android:layout_width="match_parent"

                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/pin"/>
    <Button
        android:id="@+id/BtnSolicitarViaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondeado"
        android:text="SOLICITAR VIAJE"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/black"
        android:textSize="25sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:layout_marginHorizontal="60dp"
        android:textStyle="bold"/>


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" > </include>


</androidx.coordinatorlayout.widget.CoordinatorLayout>