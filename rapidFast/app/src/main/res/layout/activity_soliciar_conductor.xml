<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.SoliciarConductorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.github.florent37.shapeofview.shapes.ArcView
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:elevation="4dp"
            app:shape_arc_cropDirection="outside"
            app:shape_arc_height="20dp"
            android:layout_marginBottom="50dp"
            app:shape_arc_position="bottom"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animacionBuscando"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="20dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="34273-mercedes.json"
                app:lottie_loop="true" />

        </com.github.florent37.shapeofview.shapes.ArcView>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/BtncancelarVije"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar Viaje"
                android:layout_margin="30dp"
                android:fontFamily="@font/bangers"
                android:textSize="25sp"
                android:background="@drawable/boton_redondeado"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"

                />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/TxtBuscandoCOnductor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscando Conductor..."
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp" />




</androidx.coordinatorlayout.widget.CoordinatorLayout>