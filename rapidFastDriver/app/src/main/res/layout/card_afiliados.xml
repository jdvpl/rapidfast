<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="200dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cedula"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/bangers"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/TxtcedulaAfiliado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:fontFamily="@font/antic"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/bangers"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/TxtnombreAfiliado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1077870326"
                android:fontFamily="@font/antic"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Celular"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/bangers"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/TxtcelularAfiliado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3209188638"
                android:fontFamily="@font/antic"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/bangers"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/TxtestadoAfiliado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:fontFamily="@font/antic"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/bangers"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/TxtFechaAfiliado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27-05-2005"
                android:fontFamily="@font/antic"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"/>
        </LinearLayout>
        </LinearLayout>

</androidx.cardview.widget.CardView>