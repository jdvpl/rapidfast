<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/reloj" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_incial"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_margin="30dp"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/animacionDriver"
            android:backgroundTint="@color/black"
            app:lottie_fileName="31815-city-driver-animation.json"
            app:lottie_loop="true"
            app:lottie_speed="2.0"
            app:lottie_autoPlay="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/BtnConductor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondeado"
                android:backgroundTint="@color/azulclaro"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:text="@string/conductor"/>
            <Button
                android:id="@+id/BtnUsuario"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/boton_redondeado"
                android:backgroundTint="@color/RojoVivo"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/cliente"/>
        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>